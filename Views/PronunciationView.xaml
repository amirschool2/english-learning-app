<UserControl x:Class="EnglishLearningApp.Views.PronunciationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Margin="10">
    <StackPanel Margin="20">
        <TextBlock Text="Pronunciation Practice" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

        <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,15"/>

        <!-- Word Selection -->
        <TextBlock Text="Select a word:" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
        <ComboBox ItemsSource="{Binding Words}" SelectedItem="{Binding SelectedWord}"
                  DisplayMemberPath="Text" Margin="0,0,0,15" Padding="10" FontSize="14"/>

        <!-- Word Details -->
        <Border Background="#ECF0F1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{Binding SelectedWord.Text}" FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding SelectedWord.Definition}" FontSize="14" Foreground="#555"
                           TextWrapping="Wrap" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding SelectedWord.Example}" FontSize="12" Foreground="#7F8C8D"
                           FontStyle="Italic" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="ðŸ”Š Play Pronunciation" Background="#3498DB" Foreground="White"
                    Padding="15" FontSize="14" Command="{Binding PlayPronunciationCommand}"
                    Margin="0,0,10,0" CornerRadius="5" MinWidth="180"/>
            <Button Content="ðŸ“š Enrich from Dictionary" Background="#2ECC71" Foreground="White"
                    Padding="15" FontSize="14" Command="{Binding EnrichWordCommand}"
                    CornerRadius="5" MinWidth="180"/>
        </StackPanel>

        <!-- Loading Indicator -->
        <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
            <TextBlock Text="Loading..." Foreground="#3498DB" FontSize="14" Margin="0,15,0,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
