<UserControl x:Class="EnglishLearningApp.Views.FlashcardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Margin="10">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Flashcards" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

        <TextBlock Text="{Binding CurrentIndex, StringFormat='Card {0}/ of ', ConverterParameter=Cards.Count}" 
                   FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,10"/>

        <!-- Flashcard -->
        <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="10" 
                Padding="40" Margin="0,0,0,20" Height="300">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Word -->
                <TextBlock Text="{Binding CurrentCard.Text}" FontSize="48" FontWeight="Bold" 
                           Foreground="#2C3E50" TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Show/Hide Definition Button -->
                <Button Content="Click to reveal definition" Background="#3498DB" Foreground="White"
                        Padding="15" FontSize="14" 
                        Command="{Binding ToggleDefinitionCommand}"
                        Margin="0,0,0,20"
                        CornerRadius="5"/>

                <!-- Definition (conditional) -->
                <TextBlock Text="{Binding CurrentCard.Definition}" FontSize="18" Foreground="#2C3E50"
                           TextAlignment="Center" TextWrapping="Wrap"
                           Visibility="{Binding ShowDefinition, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>

                <!-- Example (conditional) -->
                <TextBlock Text="{Binding CurrentCard.Example}" FontSize="14" Foreground="#7F8C8D"
                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,15,0,0"
                           Visibility="{Binding ShowDefinition, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
            </StackPanel>
        </Border>

        <!-- Correct/Incorrect Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="✓ Got it Right" Background="#2ECC71" Foreground="White" Padding="15" 
                    FontSize="14" Margin="0,0,10,0" Command="{Binding MarkCorrectCommand}" CornerRadius="5" Flex="1"/>
            <Button Content="✗ Need to Review" Background="#E74C3C" Foreground="White" Padding="15"
                    FontSize="14" Command="{Binding MarkIncorrectCommand}" CornerRadius="5" Flex="1"/>
        </StackPanel>

        <!-- Navigation -->
        <StackPanel Orientation="Horizontal">
            <Button Content="← Previous" Background="#95A5A6" Foreground="White" Padding="15"
                    FontSize="14" Margin="0,0,10,0" Command="{Binding PreviousCommand}" CornerRadius="5" Width="120"/>
            <Button Content="Next →" Background="#3498DB" Foreground="White" Padding="15"
                    FontSize="14" Command="{Binding NextCommand}" CornerRadius="5" Width="120"/>
        </StackPanel>
    </StackPanel>
</UserControl>
